@page
@model Hospital_Web.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Utilizador.Nome_Utilizador" class="form-control" />
        <label asp-for="Input.Utilizador.Nome_Utilizador">Nome de utilizador</label>
        <span asp-validation-for="Input.Utilizador.Nome_Utilizador" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
        <label asp-for="Input.Password">Password</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
        <label asp-for="Input.ConfirmPassword">Confirmar password</label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
