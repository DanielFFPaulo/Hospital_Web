{
  // Configuração de logging para diferentes componentes da aplicação
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Nível de log por defeito: Info
      "Microsoft.AspNetCore": "Warning" // Apenas avisos ou erros para o ASP.NET Core
    }
  },

  // Define que a aplicação aceita pedidos de qualquer origem
  "AllowedHosts": "*",

  // Identificador do público (utilizado nos tokens JWT)
  "Audience": "HospitalWebUsers",

  // ----------------------------
  // Ligação à base de dados Azure SQL Server
  // ----------------------------
  "ConnectionStrings": {
    "Hospital_WebContext": "Server=tcp:hospitalweb.database.windows.net,1433;"
    "Initial" "Catalog=HospitalWeb;",
    "Persist" "Security",
    "Info=False;" "User",
    "ID=adminuser;" "Password=site@123;",
    "MultipleActiveResultSets=False;" "Encrypt=True;",
    "TrustServerCertificate=False;" "Connection",
    "Timeout=30;\""
  },

  // ----------------------------
  // Configurações do JWT para autenticação via token
  // ----------------------------
  "Jwt": {
    "Key": "chave-super-secreta-bem-grande-e-segura", // chave secreta (usada para assinar os tokens)
    "Issuer": "HospitalWeb", // emissor esperado do token
    "Audience": "HospitalWebUsers", // audiência esperada do token
    "ExpireHours": 2 // tempo de expiração em horas
  },

  // ----------------------------
  // Configurações para envio de email via SMTP (Gmail)
  // ----------------------------
  "EmailSettings": {
    "FromName": "Hospital", // Nome do remetente
    "FromEmail": "lusobites.contact@gmail.com", // Email do remetente
    "SmtpServer": "smtp.gmail.com", // Servidor SMTP (Gmail)
    "SmtpPort": 587, // Porta SMTP (TLS)
    "Username": "lusobites.contact@gmail.com", // Utilizador SMTP
    "Password": "u q l o x o w f l e h p a x c p" // Palavra-passe da app (senha específica gerada pelo Gmail)
  },

  // ----------------------------
  // Palavra-passe de administrador (hash bcrypt)
  // ----------------------------
  "ApiSettings": {
    "HashedAdminPassword": "$2a$11$Tay6kM8Tm9f6yNF1ggJv/eqWJHkGtrEY0j/7r7IxltiPH8mJSjRcm"
    // Hash gerado com bcrypt (utilizado para validar a password do admin nas APIs)
  }
}
