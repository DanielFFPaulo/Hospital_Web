@model IEnumerable<Hospital_Web.Models.Medico>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Medico">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Medico">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Medico">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
