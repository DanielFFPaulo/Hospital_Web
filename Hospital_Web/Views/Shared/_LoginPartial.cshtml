@using Microsoft.AspNetCore.Identity
@using Hospital_Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-flex align-items-center">
        <span class="nav-link text-muted">Olá, @UserManager.GetUserName(User)!</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
            <button type="submit" class="btn btn-primary rounded-pill px-4 py-1 ms-2">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-primary rounded-pill px-4 py-1" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
