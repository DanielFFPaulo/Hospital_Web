@model IEnumerable<Hospital_Web.Models.Categorias>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Adicionar categoria</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @if (User.IsInRole("admin"))
                    {
                    }
                </td>
            </tr>
        }
    </tbody>
</table>